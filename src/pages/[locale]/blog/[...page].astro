---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro'
import { getCollection, getEntry } from 'astro:content'
import BlogList from '@/components/BlogList.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import Pager from '@/components/Pager.astro'
import { LIMIT_PER_PAGE } from '@/consts'

export const getStaticPaths = (async ({ paginate }) => {
  const entries = (await getCollection('blog')).sort(
    (a, b) => a.data.publishedAt.valueOf() - b.data.publishedAt.valueOf()
  )

  return entries.flatMap((entry) => {
    const [locale, ..._slug] = entry.slug.split('/')

    return paginate(entries, {
      pageSize: LIMIT_PER_PAGE,
      params: { locale },
    })
  })
}) satisfies GetStaticPaths

type Props = InferGetStaticPropsType<typeof getStaticPaths>

const { locale } = Astro.params
const { page } = Astro.props
const meta = await getEntry('meta', `${locale}/site-data`)
---

<BaseLayout
  title={meta ? meta.data.site.title : ''}
  description={meta ? meta.data.site.description : ''}
>
  <main>
    <section>
      <h1>Blog</h1>
      <div class="taxonomy-links">
        <a href=`${locale}/blog/categories/`>Categories</a>
        <a href=`${locale}/blog/tags/`>Tags</a>
        <a href=`${locale}/blog/archive/`>Archive</a>
      </div>
      <BlogList entries={page.data} kind="blog" />
    </section>
    <Pager page={page} />
  </main>
</BaseLayout>
<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4rem;
  }
  .taxonomy-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }
</style>
