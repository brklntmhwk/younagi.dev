---
import Callout from './Callout.astro'

export type Props = {
  'data-callout-blockquote'?: ''
}

const props = Astro.props
const isCallout = Object.hasOwn(props, 'data-callout-blockquote')
---

{
  isCallout ? (
    <Callout {...props}>
      <slot />
    </Callout>
  ) : (
    <blockquote {...props}>
      <slot />
    </blockquote>
  )
}
