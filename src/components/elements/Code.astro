---
// import { Code as AstroCode } from 'astro:components'
const props = Astro.props
---

<figure {...props}>
  <slot />
</figure>
<style>
  figure {
    margin: 1.5rem 0 1rem 0;
    width: 100%;
    position: relative;
    font-size: 0.85rem;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    & :global(pre) {
      width: 100%;
      border-radius: 0.375rem;
      overflow-x: auto;
      white-space: pre-wrap;
    }
    & :global(code) {
      counter-reset: line;
      display: grid;
      & :global([data-line]) {
        border-left: 4px solid transparent;
        padding: 0 0.75rem;
      }
      & :global([data-line]::before) {
        counter-increment: line;
        content: counter(line);
        display: inline-block;
        width: 1rem;
        margin-right: 1.25rem;
        text-align: right;
        color: var(--gray-light);
      }
      & :global([data-highlighted-line]) {
        border-left-color: var(--accent);
        background-color: var(--gray-light);
        :global(span) {
          background-color: unset;
        }
      }

      & :global([data-highlighted-chars]) {
        background-color: var(--gray-light);
        padding: 0.25rem;
        border-radius: 0.25rem;
        & :global(span) {
          background-color: unset;
        }
      }
    }

    & :global([data-rehype-pretty-code-title]) {
      & + :global(pre) {
        padding: 3rem 0 0.75rem 0;
      }
    }

    & :global(pre:not([data-rehype-pretty-code-title] + pre)) {
      padding: 0.75rem 0;
    }

    & :global([data-rehype-pretty-code-title]) {
      position: absolute;
      top: 0;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      padding: 0.375rem 0.75rem;
      width: 100%;
      color: var(--gray-dark);
      background: var(--gray-light);
      border-radius: 0.375rem 0.375rem 0 0;
    }
  }

  :global(pre[data-theme*=' ']),
  :global(pre[data-theme*=' '] span) {
    color: var(--shiki-light);
    background: var(--shiki-light-bg);
  }
</style>
