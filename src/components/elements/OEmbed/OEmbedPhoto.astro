---
import type { OEmbedPhoto } from './types'

type Props = {
  data: OEmbedPhoto
}

const { data } = Astro.props
const { title, width, height, url } = data
---

<img
  src={url}
  alt={title}
  {width}
  {height}
  loading="lazy"
  decoding="async"
  data-oembed
  data-oembed-photo
/>
<style>
  [data-oembed-photo] {
    margin: 0 auto;
    max-height: 100%;
    max-width: 100%;
  }
</style>
