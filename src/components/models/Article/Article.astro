---
import { getEntry } from 'astro:content';
import { getLocaleFromUrl, useTranslatedPath } from '@/utils/i18n/utils';

type Props = {
  kind: 'blog' | 'news' | 'page' | 'about';
};

const locale = getLocaleFromUrl(Astro.url);
const translatePath = useTranslatedPath(locale);
const { kind } = Astro.props;
const backToPath = kind === 'blog' || kind === 'news' ? `/${kind}/` : '/';
const t = await getEntry('i18n', `${locale}/translation`);
---

<article class="flex flex-col flex-1 gap-2">
  <slot name="metadata" />
  <hr class="w-full my-5" />
  <slot name="content" />
  <hr class="w-full my-5" />
  <slot name="cta" />
  <section class="flex justify-between pt-6">
    <a class="text-lg md:text-xl text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-500" href={translatePath(backToPath)}
      >◀ {t.data.pages[kind].back_to_top}
    </a>
    <a class="text-lg md:text-xl text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-500" href="#top"
      >{t.data.pages[kind].scroll_to_top} ▲</a
    >
  </section>
</article>
