---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro'
import { getCollection } from 'astro:content'
import BlogLayout from '@/layouts/BlogLayout.astro'
import { mdxComponents } from '@/lib/mdx-components'
import { getPublishedSortedEntries } from '@/lib/collections/contents'
import { defaultLang } from '@/utils/i18n/data'

export const getStaticPaths = (async () => {
  const entries = getPublishedSortedEntries(await getCollection('blog'))
  const LocaleEntries = entries.filter(
    (entry) => entry.slug.slice(0, entry.slug.indexOf('/')) !== defaultLang
  )

  return LocaleEntries.map((entry) => {
    const locale = entry.slug.slice(0, entry.slug.indexOf('/'))
    const rawSlug = entry.slug.slice(entry.slug.indexOf('/') + 1)

    return { params: { locale, slug: rawSlug }, props: { entry } }
  })
}) satisfies GetStaticPaths

type Props = InferGetStaticPropsType<typeof getStaticPaths>

const { entry } = Astro.props
const { Content, headings } = await entry.render()
---

<BlogLayout entry={{ ...entry }} {headings}>
  <Content components={mdxComponents} />
</BlogLayout>
