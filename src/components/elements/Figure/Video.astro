---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'figure'>;

const {title, ...props} = Astro.props;
---

<figure {...props}>
  <slot />
  <figcaption>{title}</figcaption>
</figure>
<style>
  figure {
    width: 100%;
    max-width: 48rem;
    margin: 1.75rem 0;
    display: flex;
    flex-direction: column;
    justify-self: center;
    gap: 0.375rem;
    place-items: center;
  }
  figcaption {
    font-size: 0.95rem;
  }
</style>
