---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'div'>;

const { class: cardClass, ...restProps } = Astro.props;
---

<div
  class:list={[
    "double-border bg-default-reverse hover:bg-default-reverse-hover max-w-full xxs:max-w-32 xs:max-w-48 sm:max-w-56 lg:max-w-72 xl:max-w-80 h-48 sm:h-60 flex flex-col gap-1.5 sm:gap-2 break-inside-avoid animate-fadeInUp",
    cardClass
  ]}
  {...restProps}
>
  <slot />
</div>
<style>
  .card {
    & :global(.image-container) {
      max-height: 7.125rem;
      min-height: 5.25rem;
      padding: 0.25rem;
      display: flex;
      justify-content: center;
      & :global(figure) {
        margin: 0 auto;
      }
      & :global(figcaption) {
        display: none;
      }
      & :global(img) {
        object-fit: contain;
        width: 100%;
        height: 100%;
      }
      @media (min-width: 640px) {
        max-height: 8.75rem;
        min-height: 6.75rem;
      }
    }
    & :global(.content-container) {
      & :global(br:first-child) {
        display: none;
      }
      font-size: 0.75rem;
      padding: 0.125rem 0.325rem;
      overflow-y: auto;
      @media (min-width: 640px) {
        font-size: 0.925rem;
        padding: 0.125rem 0.5rem
      }
    }
  }
</style>
