---
import { getEntry } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocaleFromUrl, useTranslatedPath } from '@/utils/i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const translatePath = useTranslatedPath(locale);
const t = await getEntry('i18n', `${locale}/translation`);
---

<BaseLayout title="404" og={{ show: false }}>
  <main class="mt-10 lg:mt-0 flex flex-col gap-5 text-center" data-pagefind-ignore="all">
    <h1 class="font-pixelMPlus text-5xl md:text-6xl font-extrabold">404</h1>
    <p>{t.data.pages.not_found.message}</p>
    <a class="text-lg md:text-xl text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-500" href={translatePath('/')}
      >â—€ {t.data.pages.not_found.back_to_top}</a
    >
  </main>
</BaseLayout>
