---
import { getEntry } from 'astro:content'
import BaseLayout from '@/layouts/BaseLayout.astro'
import TaxonomyList from '@/components/TaxonomyList.astro'
// import { getSortedContentEntries } from '@/lib/collections/contents'
import { defaultLang } from '@/utils/i18n/data'
import { getTags } from '@/lib/collections/data'

const meta = await getEntry('meta', `${defaultLang}/site-data`)
const t = await getEntry('i18n', `${defaultLang}/translation`)
// const entries = await getSortedContentEntries('blog', defaultLang)
const tags = await getTags(defaultLang)
// const tags = [...new Set(entries.flatMap((entry) => entry.data.tags ?? []))]
---

<BaseLayout
  title={meta.data.blog.tags.title}
  description={meta.data.blog.tags.description}
  og={{ show: true }}
>
  <main data-pagefind-ignore="all">
    <h1>{t.data.pages.blog.tags.title}</h1>
    <a class="back-to-link" href={'/blog'}>
      â—€ {t.data.pages.blog.back_to_top}
    </a>
    <hr />
    <TaxonomyList taxonomyList={tags} />
  </main>
</BaseLayout>
<style>
  main {
    h1 {
      margin-bottom: 1.25rem;
    }
  }
</style>
