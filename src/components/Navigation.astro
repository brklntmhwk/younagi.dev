---
import { getEntry } from 'astro:content'
import NavLink from '@/components/NavLink.astro'
import Svg from '@/components/Svg/index.astro'
import Search from '@/components/Search.astro'
import NavMenuContainer from '@/components/NavMenuContainer.astro'
import LocalePicker from '@/components/LocalePicker.astro'
import { getLocaleFromUrl } from '@/i18n/utils'

const locale = getLocaleFromUrl(Astro.url)
const t = await getEntry('i18n', `${locale}/translation`)
---

<nav data-pagefind-ignore="all">
  <a class="blog-title" href={`/${locale}/`}>
    {t.data.nav.blog_title}
  </a>
  <NavMenuContainer>
    <div class="nav-links">
      <NavLink href={`/${locale}/`}>{t.data.nav.nav_links.home}</NavLink>
      <NavLink href={`/${locale}/blog/`}>{t.data.nav.nav_links.blog}</NavLink>
      <NavLink href={`/${locale}/about/`}>{t.data.nav.nav_links.about}</NavLink>
    </div>
    <div class="icon-links">
      <LocalePicker />
      <Search />
      <a href="https://github.com/brklntmhwk" target="_blank">
        <Svg iconName="github" width={32} height={32} />
      </a>
    </div>
  </NavMenuContainer>
</nav>
<style>
  nav {
    background-color: rgba(255 255 255 0.4);
    backdrop-filter: opacity(0.2);
    -webkit-backdrop-filter: opacity(0.2);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: 4.25rem;
    box-sizing: border-box;
    padding: 0.5rem 1.25rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    color: var(--black);
    border-bottom: 2px solid transparent;
    text-decoration: none;
  }
  a.blog-title {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .nav-links {
    display: grid;
    gap: 1.5rem;
    padding: 0.75rem 2.75rem;
    margin-left: 1.25rem;
  }
  .nav-links a {
    position: relative;
    &:hover::before {
      font-family: 'PixelMplus10';
      content: '▶';
      position: absolute;
      top: 0;
      left: -1.5rem;
      font-size: 1.25rem;
      align-self: center;
    }
  }
  .nav-links a.active {
    text-decoration: underline;
    text-decoration-color: var(--accent);
    text-underline-offset: 8px;
  }
  .icon-links {
    display: flex;
    justify-content: center;
    gap: 1.25rem;
    padding: 0.75rem 2.75rem;
  }
  @media (min-width: 768px) {
    nav {
      height: 5.25rem;
      box-sizing: border-box;
      padding: 0.85rem 1.5rem;
    }
    .icon-links,
    .nav-links {
      display: flex;
      padding: 0;
    }
    .nav-links {
      gap: 3.25rem;
    }
    .icon-links {
      justify-content: unset;
      gap: 2rem;
    }
  }
  @media (min-width: 1024px) {
    nav {
      display: grid;
      gap: 1.5rem;
      grid-template-rows: 1fr 9fr;
      grid-template-columns: 1fr;
      grid-area: navigation;
      grid-template-areas:
        'blog-title'
        'nav-menu';
      align-items: start;
      position: sticky;
      padding: 1.75rem 1.85rem;
      margin: 0;
      width: 18rem;
      height: 100vh;
      border-right: 1px solid #e4e9f0;
      box-sizing: border-box;
    }
    a.blog-title {
      grid-area: blog-title;
      place-self: center;
    }
    .nav-links {
      grid-area: nav-links;
      display: grid;
      gap: 2rem;
      align-self: start;
      margin-left: 1.5rem;
      padding: 0;
    }
    .nav-links a {
      position: relative;
      &:hover::before {
        font-family: 'PixelMplus10';
        content: '▶';
        position: absolute;
        top: 0;
        left: -1.45rem;
        font-size: 1.25rem;
        align-self: center;
      }
    }
    .nav-links a.active {
      text-decoration: underline;
      text-decoration-color: var(--accent);
      text-underline-offset: 8px;
    }
    .icon-links {
      padding: 0 0.5rem;
      grid-area: icon-links;
      display: flex;
      justify-content: space-between;
      gap: 1.75rem;
      align-self: end;
    }
  }
</style>
