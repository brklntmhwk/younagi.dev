---
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@/layouts/BaseLayout.astro'
import FormattedDate from '../components/FormattedDate.astro'
import Svg from '@/components/Svg/index.astro'

type Props = CollectionEntry<'blog'>['data']

const {
  title,
  description,
  category,
  tags,
  publishedAt,
  modifiedAt,
  heroImage,
} = Astro.props
---

<BaseLayout title={title} description={description ?? ''}>
  <main>
    <article>
      <section class="blog-metadata">
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="date-meta">
          <div>
            <Svg iconName="upload" width={20} height={20} />
            <FormattedDate date={publishedAt} />
          </div>
          {
            modifiedAt && (
              <div>
                <Svg iconName="update" width={20} height={20} />
                <FormattedDate date={modifiedAt} />
              </div>
            )
          }
        </div>
        <h1 class="entry-title">{title}</h1>
        <section class="taxonomies">
          <a href={`/blog/categories/${category[0]}/`}>{category[0]}</a>
          {
            tags && (
              <ul class="tag-list">
                {tags.map((tag) => (
                  <li>
                    <a href={`/blog/tags/${tag}/`}>#{tag}</a>
                  </li>
                ))}
              </ul>
            )
          }
        </section>
      </section>
      <hr />
      <div class="prose">
        <slot />
      </div>
    </article>
  </main>
</BaseLayout>
<style>
  article {
    display: grid;
  }
  hr {
    width: 100%;
  }
  section.taxonomies {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.25rem;
    text-transform: capitalize;
  }
  .date-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
  }
  h1.entry-title {
    font-size: 2.8em;
  }
  ul.tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.65rem;
    margin: 0;
  }
</style>
