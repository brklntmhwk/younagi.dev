---
import { type Languages } from '@/utils/i18n/data'
import { formatDate } from '@/utils/formatDate'

type Props = {
  date: Date
  locale: Languages
  show?: {
    year: boolean
    month: boolean
    day: boolean
  }
}

const { date, locale, show } = Astro.props
const displayDate = formatDate(date, locale, show)
---

<time datetime={date.toISOString()}>{displayDate}</time>
