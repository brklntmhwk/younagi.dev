---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'figure'>;

const { title, ...props } = Astro.props;
---

<figure class="w-full max-w-3xl my-7 flex flex-col justify-center gap-1.5 place-items-center" {...props}>
  <slot />
  <figcaption class="text-sm">{title}</figcaption>
</figure>
