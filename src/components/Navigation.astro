---
import { getEntry } from 'astro:content'
import HeaderLink from './HeaderLink.astro'
import Svg from '@/components/Svg/index.astro'
import Search from '@/components/Search.astro'

const meta = await getEntry('meta', 'site-data')
---

<nav>
  <h2><a href="/">{meta.data.site.title}</a></h2>
  <div class="nav-links">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
  </div>
  <div class="social-links">
    <Search />
    <a href="https://twitter.com/astrodotbuild" target="_blank">
      <span class="sr-only">Follow Astro on Twitter</span>
      <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
        ><path
          fill="currentColor"
          d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
        ></path></svg
      >
    </a>
    <a href="https://github.com/brklntmhwk" target="_blank">
      <span class="sr-only">Go to the GitHub repo</span>
      <Svg iconName="github" width={32} height={32} />
    </a>
  </div>
  <div class="mobile-menu">
    <button><Svg iconName="hamburger" width={32} height={32} /></button>
  </div>
</nav>

<style>
  nav {
    grid-area: navigation;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 8px;
  }
  nav a {
    /* padding: 1em 0.5em; */
    color: var(--black);
    border-bottom: 2px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .nav-links {
    display: none;
  }
  .mobile-menu {
    display: block;
  }
  .mobile-menu button {
    background-color: transparent;
    border: none;
    cursor: pointer;
  }
  @media (min-width: 768px) {
    nav {
      padding: 0 10px;
    }
    .social-links,
    .nav-links {
      display: flex;
      column-gap: 15px;
    }
    .mobile-menu {
      display: none;
    }
  }
  @media (min-width: 1024px) {
    nav {
      display: grid;
      grid-template-rows: 1fr 3fr 1fr;
      grid-template-areas:
        'blog-title'
        'nav-links'
        'social-links';
      justify-content: start;
      align-items: start;
      position: sticky;
      top: 0;
      padding: 12px 15px 12px 25px;
      width: 18rem;
      height: 100vh;
      border-right: 1px solid #e4e9f0;
      box-sizing: border-box;
    }
    nav h2 {
      grid-area: blog-title;
    }
    .nav-links {
      display: grid;
      grid-area: nav-links;
      gap: 15px;
    }
    .social-links {
      grid-area: social-links;
      display: flex;
      justify-content: space-evenly;
      column-gap: 10px;
      align-self: end;
    }
  }
</style>
