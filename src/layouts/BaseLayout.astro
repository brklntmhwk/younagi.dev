---
import { BaseHead } from '@/components/BaseHead'
import { Navigation } from '@/components/Navigation'
import { Footer } from '@/components/Footer'
import { LocaleStore } from '@/components/LocaleStore/LocaleStore'
import { UrlStore } from '@/components/UrlStore/UrlStore'
import { Toaster } from '@/components/Toaster/Toaster'
import { getLocaleFromUrl } from '@/utils/i18n/utils'

export type Props = {
  title: string
  description?: string
  og: {
    show: boolean
    image?: URL
    height?: number
    width?: number
    type?: 'article' | 'website'
  }
}

const url = Astro.url
const locale = getLocaleFromUrl(url)
const { title, description, og } = Astro.props
---

<!doctype html>
<html lang={locale}>
  <head>
    <BaseHead {title} description={description ?? ''} {og} />
  </head>
  <body data-pagefind-body>
    <LocaleStore client:only="solid" {locale} />
    <UrlStore client:only="solid" {url} />
    <div class="base-wrapper">
      <Navigation />
      <slot />
      <Footer />
    </div>
    <div id="modal"></div>
    <Toaster client:only="solid" />
    <style>
      .base-wrapper {
        margin: 0 auto;
        padding: 3.75rem 0 0 0;
        display: grid;
        grid-template-rows: 1fr auto;
        grid-template-columns: 100%;
        grid-template-areas:
          'main'
          'footer';
        @media (min-width: 768px) {
          padding-top: 5rem;
        }
        @media (min-width: 1024px) {
          padding: 0;
          margin: 0;
          grid-template-columns: 18rem 1fr;
          grid-auto-rows: minmax(100px, 100dvh);
          grid-template-areas:
            'navigation main'
            'navigation footer';
        }
      }
      #modal {
        position: fixed;
        top: 0;
        left: 0;
      }
    </style>
  </body>
</html>
